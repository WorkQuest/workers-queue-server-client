{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "outDir": "./build",
    "allowJs": false,
    "lib": ["es6"],
    "types": ["reflect-metadata"],
    "target": "es6",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "removeComments": true
  },
  "exclude": ["node_modules"],
  "include": [
    "./*.ts",
    "./src/**/*.ts",
  ],
  "rootDirs": [
    "src"
  ]
}
